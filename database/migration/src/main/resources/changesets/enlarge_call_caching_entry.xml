    <!-- Widen CALL_CACHING_SIMPLETON_ENTRY FK to match PK. -->
    <changeSet author="mcovarr" id="enlarge_call_caching_simpleton_entry_fk" dbms="mysql,hsqldb,postgresql,mariadb">
        <modifyDataType
                tableName="CALL_CACHING_SIMPLETON_ENTRY"
